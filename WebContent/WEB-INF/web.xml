<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<display-name>CalDAV</display-name>

	<servlet>
		<servlet-name>CalDAVServlet</servlet-name>
		<servlet-class>com.whitebearsolutions.caldav.CalDAVServlet</servlet-class>
		<init-param>
			<param-name>CalendarProvider</param-name>
			<param-value>au.com.scoutmaster.CalendarProviderImpl</param-value>
		</init-param>
		<init-param>
			<param-name>store</param-name>
			<param-value>com.whitebearsolutions.caldav.store.FileSystemStore</param-value>
		</init-param>

	</servlet>


	<servlet-mapping>
		<servlet-name>CalDAVServlet</servlet-name>
		<url-pattern>/caldav</url-pattern>
	</servlet-mapping>


</web-app>